#include <stdio.h>
#include <stdlib.h>

 float birinci;
 float ikinci;
int main() {

  printf("Ilk sayinizi giriniz : \n");
  scanf("%f", &birinci);
  printf("Ikinci sayinizi giriniz : \n");
  scanf("%f", &ikinci);


  printf("Toplaminiz : %.2f \n", birinci+ikinci);
  printf("Farkiniz : %.2f \n", birinci-ikinci);
  printf("Carpiminiz : %.2f \n", birinci*ikinci);
  if (ikinci>0){
  printf("Bolmeniz : %.2f \n", birinci/ikinci);
  }
  else{
    printf("Bolmeniz Tanimsizdir");
  }



}
