#include <stdio.h>

int main()
{
    int x;//3
    int y;//2
    int z;//1

    printf("1. Sayiyi girin: ");
    scanf("%d", &x);
    printf("2. Sayiyi girin: ");
    scanf("%d", &y);
    printf("3. Sayiyi girin: ");
    scanf("%d", &z);

//hocam x en kucuk z en buyuk sayimimiz olmasýný istiyoruz. o yuzden surekli olarak buyuk olaný saga aliyoruz. yani x'i y'e tasiyoruz. sonra z'e tasiyoruz.
//kısaca eger x y den buyuksek iki sayiyi degistiriz. x z den buyukse yer degistiririz. y z den buyukse yer degistiriz. boylece sıralamayı x y z yaptık hocam.
    if (x > y) {
        int temp = x;
        x = y;
        y = temp;
    }
    if (x > z) {
        int temp = x;
        x = z;
        z = temp;
    }
    if (y > z) {
        int temp = y;
        y = z;
        z = temp;
    }

    printf("Kucukten buyuge: %d < %d < %d\n", x, y, z);

    return 0;
}
